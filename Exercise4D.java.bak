import javax.swing.JOptionPane;
class Exercise4D {
	public static void main(String[] args) {
		//triangle 1
		String S_base,S_height;
		Double D_base,D_height,area;
		S_base = JOptionPane.showInputDialog("Input Base :");
		S_height = JOptionPane.showInputDialog("Input Height :");
		D_base = Double.parseDouble(S_base);
		D_height = Double.parseDouble(S_height);
		area = (1.0/2.0)*D_base*D_height;
		System.out.println("Area of triangle 1 :"+area);
